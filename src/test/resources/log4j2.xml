<Configuration status="Info">
    <Properties>
        <Property name="APP_LOG_ROOT">./logs</Property>
    </Properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%style{%date{HH:mm:ss.SSS}}{yellow}
                [%t] %highlight{%-5level}{FATAL=bg_red, ERROR=red, WARN=yellow, INFO=green} %logger{36} - %msg%n"/>
        </Console>
        <RollingFile name="File"
                     fileName="${APP_LOG_ROOT}/automation.log"
                     filePattern="${APP_LOG_ROOT}/automation-%d{yyyy-MM-dd}.log">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
            <SizeBasedTriggeringPolicy size="5000"/>
            
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="Debug">
             <AppenderRef ref="File"/> 
             <!--AppenderRef ref="Console"/>-->
        </Root>
        
           

    </Loggers>
</Configuration>